                <TextBox x:Name="txtBoxPrecio"  MaxLength="5" TextWrapping="Wrap" Margin="143,203,296,44" TextChanged="txtBoxPrecio_TextChanged_1" PreviewTextInput="txtBoxPrecio_PreviewTextInput_1"/>
                <TextBox x:Name="txtBoxStock"  MaxLength="5" TextWrapping="Wrap" Margin="143,247,296,0" TextChanged="txtBoxStock_TextChanged_1" PreviewTextInput="txtBoxStock_PreviewTextInput_1"/>

