                <TextBlock x:Name="txtPrincipal" HorizontalAlignment="Left" Margin="10,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="60" Width="589" FontSize="32" TextAlignment="Center"><Run Language="es-cl" Text="KIOSKO SYSTEM - EDITAR PRODUCTO"/></TextBlock>
                <TextBlock x:Name="txtStock" HorizontalAlignment="Left" Margin="53,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="es-cl" Text="Stock:"/></TextBlock>
                <TextBlock x:Name="txtNombre" HorizontalAlignment="Left" Margin="53,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="es-cl" Text="Nombre:"/></TextBlock>
                <TextBlock x:Name="txtTipo" HorizontalAlignment="Left" Margin="53,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="es-cl" Text="Tipo:"/></TextBlock>
                <TextBlock x:Name="txtPrecio" HorizontalAlignment="Left" Margin="53,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="es-cl" Text="Precio:"/></TextBlock>

                <TextBox x:Name="txtBlockNombre" MaxLength="20" TextWrapping="Wrap" Margin="143,112,296,135" TextChanged="txtBlockNombre_TextChanged_1" PreviewTextInput="txtBlockNombre_PreviewTextInput_1"/>
